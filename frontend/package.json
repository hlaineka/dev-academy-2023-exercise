{
	"name": "Solita dev academy coding exercise",
	"version": "0.0.1",
	"description": "Solita dev academy coding exercise Web UI by hlaineka",
	"author": "hlaineka",
	"licence": "MIT",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"build": "webpack",
		"start": "webpack serve --open",
		"eslint:check": "eslint-config-prettier src/App.tsx",
		"eslint": "npm run eslint:check && eslint '{src,e2e}/**/*.{ts,tsx}'",
		"eslint:fix": "npm run eslint:check && eslint --fix '{src,e2e}/**/*.{ts,tsx}'",
		"prettier": "prettier --list-different '{src,e2e}/**/*.{ts,tsx}'",
		"lint": "npx tsc && npm run eslint && npm run prettier",
		"preinstall": "npx npm-force-resolutions"
	},
	"devDependencies": {
		"@types/html-webpack-plugin": "^3.2.6",
		"@types/jest": "^29.2.6",
		"@types/react": "^18.0.27",
		"@types/react-dom": "^18.0.10",
		"@types/webpack": "^4.41.33",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"babel-jest": "^29.3.1",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-react": "^7.32.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"prettier": "^2.8.3",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.4",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.11.1"
	},
	"jest": {
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		],
		"transform": {
			"\\.[jt]sx?$": "babel-jest",
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fileTransformer.js"
		}
	},
	"dependencies": {
		"apollo": "^2.34.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.7.0"
	}
}
